<MyGridLayout>
    name:id_name
    pizza:id_pizza
    color:id_color
    
    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 2
            Label:
                text:"Name"
            TextInput:
                id:id_name
                multiline:False       
            Label:
                text:"Favorite Pizza"
            TextInput:
                id:id_pizza
                multiline:False
            Label:
                text:"Favorite Color"
            TextInput:
                id:id_color
                multiline:False
        Button:
            text:"Submit"
            font_size:32
            on_press:root.press()
 